<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.flashcard_quiz.CardViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Display_frag">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="262dp"
            android:layout_height="259dp"
            android:layout_gravity="center"
            android:layout_margin="320dp"
            android:elevation="@dimen/cardview_compat_inset_shadow"
            app:cardBackgroundColor="@color/teal_200"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/flipTextView"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                 />

            <Button
                android:id="@+id/showAnswerButton"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal|bottom"
                android:onClick="@{() -> viewModel.currentCard.answer"
                android:text="Show Answer" />

            <Button
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:onClick="@{()->viewModel.deleteCurrentCard()}"
                android:text="🗑️" />

            <Button
                android:id="@+id/editbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="edit"

                />
        </androidx.cardview.widget.CardView>
<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/addbutton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:src="@drawable/baseline_add_24"
    />

        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_gravity="start|bottom"
            android:onClick="@{() -> viewModel.prevCard()}"
            android:text="prev"/>


        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_gravity="end|bottom"
            android:onClick="@{() -> viewModel.nextCard()}"
            android:text="next"/>

<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="262dp"-->
<!--            android:layout_height="259dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_margin="320dp"-->
<!--            android:elevation="@dimen/cardview_compat_inset_shadow"-->
<!--            app:cardBackgroundColor="@color/teal_200"-->
<!--            app:cardCornerRadius="10dp">-->
<!--            -->
<!--        </androidx.cardview.widget.CardView>-->

    </FrameLayout>


</layout>
